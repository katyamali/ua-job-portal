---
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <a href="/" class="logo"><h1>UA Jobs</h1> </a>

  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/openings">Openings</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about/" class="about">About</HeaderLink>
  </nav>

  <a href="/" class="social-links">Telegram</a>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

  .logo h1 {
    font-size: 1.5em;
  }

  nav {
    display: flex;
    justify-content: center;
  }

  a {
    padding: 24px;
    border-bottom: 4px solid transparent;
  }

  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  @media (max-width: 720px) {
    header {
      display: grid;
    }

    .logo,
    .about,
    .social-links {
      display: none;
    }
  }
</style>
