---
import BlogPostEntry from "../components/BlogPostEntry.astro";
import { fetchBlogposts } from "../helpers/fetch-data.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Blog";

const blogPosts = await fetchBlogposts();
---

<BaseLayout pageTitle={pageTitle} displayContactBanner>
  <ul>
    {
      blogPosts.map((post) => {
        return <BlogPostEntry post={post} />;
      })
    }
  </ul>
</BaseLayout>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }
</style>
